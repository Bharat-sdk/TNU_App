<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.makertech.tnustudentapp">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheNeotiaUniversityStudentApp">
        <activity android:name=".ui.home.HomeActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>
        <activity android:name=".ui.timetable.WeekdaysFragment"/>
        <activity android:name=".ui.timetable.TimetableFragment"/>
        <activity android:name=".ui.availiblity.TeacherAvailiblityActivity"/>
        <activity android:name=".ui.attendance.StudentAttendanceActivity"/>
        <activity android:name=".uiTeacher.homeTeacher.TeacherHomeActivity"  android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>
        <activity android:name=".uiTeacher.attendanceTeacher.TeacherAttendanceActivity"/>

        <activity android:name=".login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>