<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelinestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".05" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".95" />

        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/btn_give_assignments"
            android:layout_marginTop="80dp"
            android:text="Give Assignments"
            android:elevation="16dp"
            android:textAllCaps="false"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:fontFamily="@font/mons_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/guidelinestart"
            app:layout_constraintEnd_toStartOf="@id/guidelineend"
            android:background="@drawable/work_button_selector"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/btn_take_attendance"
            android:layout_marginTop="80dp"
            android:text="Take Attendance"
            android:textColor="@color/black"
            android:elevation="16dp"
            android:textAllCaps="false"
            android:textSize="22sp"
            android:fontFamily="@font/mons_medium"
            app:layout_constraintTop_toBottomOf="@id/btn_give_assignments"
            app:layout_constraintStart_toEndOf="@id/guidelinestart"
            app:layout_constraintEnd_toStartOf="@id/guidelineend"
            android:background="@drawable/work_button_selector"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/btn_timetable"
            android:textColor="@color/black"
            android:layout_marginTop="80dp"
            android:text="Time Table"
            android:textAllCaps="false"
            android:textSize="22sp"
            android:fontFamily="@font/mons_medium"
            android:elevation="16dp"
            app:layout_constraintTop_toBottomOf="@id/btn_take_attendance"
            app:layout_constraintStart_toEndOf="@id/guidelinestart"
            app:layout_constraintEnd_toStartOf="@id/guidelineend"
            android:background="@drawable/work_button_selector"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>